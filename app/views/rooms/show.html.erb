<h2><%= @room.name %></h2>
<button>
  <%= link_to "Add New Room", new_room_path %>
</button>
  <% if current_user.rooms.length > 1 %>
    <button><%= link_to "Back to Rooms", rooms_path %></button>
  <% end %>
<h4>Roommates</h4>

<div id="roommates-notifications"></div>

<form room-id="<%= @room.id %>" id="new-roommate">
  <label>Add Roommates</label>
  <input type="text" placeholder="user's email" id="user_email">
  <input type="submit">
</form>

<ul id="roommates-list">
  <% @users.each do |u|  %>
  <li><%= u[:email] %><span><button class="delete-roommate" roommate-id="<%= u[:roommate_id] %>" room-id="<%= @room.id %>">X</button></span></li>
  <% end %>
</ul>

<h4>Places</h4>

<form data-id="<%= @room.id %>" id="new-place">
  <label>Add A Place</label>
  <input placeholder="url" type="text" id="place_url">
  <button id="import-data">Import</button>
  <input placeholder="address" type="text" id="place_address">
  <input placeholder="price" type="text" id="place_price">
  <input placeholder="beds" type="text" id="place_beds">
  <input placeholder="baths" type="text" id="place_baths">
  <input placeholder="sqft" type="text" id="place_sqft">
  <input placeholder="amenities" type="text" id="place_amenities">
  <input type="submit">
</form>

<ul id="places-list">
  <% @places.each do |p| %>
  <li>
    <%= p.address %>
    <span><button class="delete-place" place-id="<%= p.id %>" room-id="<%= @room.id %>">X</button></span>
    <ul class="hidden">
      <li>Price: <%= p.price %> </li>
      <li>Beds: <%= p.beds %></li>
      <li>Baths: <%= p.baths %></li>
      <li>Sqft: <%= p.sqft %></li>
      <li>Amenities: <%= p.amenities %></li>
    </ul>
  </li>
  <% end %>
</ul>
